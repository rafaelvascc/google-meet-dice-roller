{
    "manifest_version": 3,
    "name": "Google Meet Dice Roller",
    "version": "0.0.0",
    "description": "Dice roller extension for RPG players using Google Meet",
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/64.png",
        "32": "icons/64.png",
        "48": "icons/64.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_icon": "icons/128.png"
    },
    "host_permissions": [
        "*://meet.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://meet.google.com/*"
            ],
            "js": []
        }
    ]
}