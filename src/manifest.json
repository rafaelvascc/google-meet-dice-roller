{
    "name": "Google Meets Dice Roller.",
    "version": "1.0",
    "description": "Dice roller extension for RPG players using Google Meets",
    "manifest_version": 2,
    "icons": {
        "16": "d20-icon-34414-Windows.png",
        "32": "d20-icon-34414-Windows.png",
        "48": "d20-icon-34414-Windows.png",
        "128": "d20-icon-34414-Windows.png"
    },
    "browser_action": {
        "default_icon": "d20-icon-34414-Windows.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "parser.js",
                "roller.js",
                "presenter.js",
                "pageEvents.js"
            ]
        }
    ]
}